@model List<MvcWhatsUp.Models.User>

@{
	ViewData["Title"] = "Chaos Agents";
}

<div class="text-center">
    <h1 class="display-4">Chaos Agents</h1>
    <p>Number of operatives in the network: <span class="text-danger">@Model.Count</span></p>
</div>

<div class="mb-4">
    <a href="/Users/Create" class="btn btn-dark">Enlist New Agent</a>
</div>

<table class="user-table">
    <thead>
        <tr>
            <th>Agent ID</th>
            <th>Alias</th>
            <th>Chaos Communicator</th>
            <th>Contact Signal</th>
            <th>Agent override</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td class="username">@user.UserName</td>
                <td>@user.MobileNumber</td>
                <td>@user.EmailAddress</td>
                <td>
                    <!-- Edit Link -->
                    <a href="/Users/Edit/@user.UserId" class="action-link edit-link">Edit</a>
                    <span class="action-separator">|</span>
                    <!-- Delete Link -->
                    <a href="/Users/Delete/@user.UserId" class="action-link delete-link">Terminate</a>
                </td>
            </tr>
        }
    </tbody>
</table>
