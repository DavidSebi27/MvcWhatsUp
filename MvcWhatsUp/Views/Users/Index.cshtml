@model List<MvcWhatsUp.Models.User>

@{
    ViewData["Title"] = "Chaos Agents";
    int loggedInUserId = -1;
    if (ViewData["UserId"] != null)
    {
        loggedInUserId = int.Parse(ViewData["UserId"].ToString());
    }
}

<div class="text-center">
    <h1 class="display-4">Chaos Agents</h1>
    <p>Number of operatives in the network: <span class="text-danger">@Model.Count</span></p>
</div>

<div class="mb-4">
    <a href="/Users/Create" class="enlist-agent-btn">Enlist New Agent</a>
</div>

<table class="user-table">
    <thead>
        <tr>
            <th>Agent ID</th>
            <th>Alias</th>
            <th>Chaos Communicator</th>
            <th>Contact Signal</th>
            <th>Agent override</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td class="username">@user.UserName</td>
                <td>@user.MobileNumber</td>
                <td>@user.EmailAddress</td>
                <td class="action-cell">
                    <div class="action-links">
                        <a href="/Users/Edit/@user.UserId" class="action-link edit-link" name="UserID">Edit</a>
                        <span class="action-separator">|</span>
                        <a href="/Users/Delete/@user.UserId" class="action-link delete-link" name="UserId">Terminate</a>
                    </div>
                    <a href="/Chats/AddMessage/@user.UserId" class="glitch-contact-btn">Contact</a>
                </td>
            </tr>
        }
    </tbody>
</table>
