@model MvcWhatsUp.Models.User
@{
    ViewData["Title"] = "Terminate Agent";
}

<h2 class="form-title">Terminate Agent</h2>

<form action="/Users/Terminate" method="POST" class="terminate-form">
    <fieldset>
        <div class="form-group">
            <label for="UserName" class="form-label">Agent Alias:</label>
            <input type="text" id="UserName" name="UserName" required value="@Model?.UserName"
                   placeholder="Enter your alias" class="form-control shadow-input" disabled />
        </div>

        <div class="form-group">
            <label for="Confirmation" class="form-label">Are you sure you want to terminate this agent?</label>
            <div class="checkbox-container">
                <input type="checkbox" id="Confirmation" name="Confirmation" required class="checkbox-input" />
                <label for="Confirmation" class="checkbox-label">Check to confirm</label>
            </div>
        </div>

        <button type="submit" class="btn shadow-button terminate-button">Terminate Agent</button>
        <a href="/Users/Index" class="btn shadow-button cancel-button">Cancel</a>
    </fieldset>
</form>
