@model MvcWhatsUp.Models.User
@{
    ViewData["Title"] = "Enlist a New Agent";
}

<h2 class="form-title">Enlist a New Agent</h2>

<form action="/Users/Create" method="POST" class="agent-form">
    <fieldset>
        <div class="form-group">
            <label for="UserName" class="form-label">Agent Alias:</label>
            <input type="text" id="UserName" name="UserName" required value="@Model?.UserName"
                   placeholder="Enter your alias" class="form-control shadow-input" />
        </div>

        <div class="form-group">
            <label for="MobileNumber" class="form-label">Chaos Communicator:</label>
            <input type="tel" id="MobileNumber" name="MobileNumber" required value="@Model?.MobileNumber"
                   placeholder="Enter your communicator code" class="form-control shadow-input" pattern="[0-9+ -]*" />
        </div>

        <div class="form-group">
            <label for="EmailAddress" class="form-label">Contact Signal:</label>
            <input type="email" id="EmailAddress" name="EmailAddress" required value="@Model?.EmailAddress"
                   placeholder="Enter your contact signal" class="form-control shadow-input" />
        </div>

        <div class="form-group">
            <label for="Password" class="form-label">Encryption Key:</label>
            <input type="password" id="Password" name="Password" required value="@Model?.Password"
                   placeholder="Enter your encryption key" class="form-control shadow-input" />
        </div>

        <button type="submit" class="btn shadow-button">Enlist Agent</button>
    </fieldset>
</form>
