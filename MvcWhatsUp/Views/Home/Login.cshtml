@model MvcWhatsUp.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Log in!</h1>

<form asp-controller="Home" asp-action="Login" method="post" class="mt-4">
    <fieldset>
        <div class="mb-3">
            <label asp-for="UserName" class="form-label">Your Name:</label>
            <input asp-for="UserName" class="form-control" required placeholder="Enter your username">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Your Password:</label>
            <input asp-for="Password" type="password" class="form-control" required placeholder="Enter your password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark">Login</button>
    </fieldset>
</form>
